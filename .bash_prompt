# set a fancy prompt
case "$TERM" in
    xterm-color) color_prompt=yes;;
esac
#force_color_prompt=yes

if [ -n "$force_color_prompt" ]; then
    if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
	# We have color support; assume it's compliant with Ecma-48
	# (ISO/IEC-6429). (Lack of such support is extremely rare, and such
	# a case would tend to support setf rather than setaf.)
	color_prompt=yes
    else
	color_prompt=
    fi
fi

# Display host.env if possible for the hostnamen - BFG Specific
export DOTDOMAINNAME=${HOSTNAME/#${HOSTNAME%.*.*}/}
HOSTSTRING=${HOSTNAME/${DOTDOMAINNAME}/}

# colorize hostname strings based on environment
if [ "$color_prompt" = yes ]; then
    if [[ $HOSTNAME =~ \.(sea|ash) ]]; then
        # red prompt for important hosts
        PSCOLOR="\e[0;31m"
    elif [[ $HOSTNAME =~ svn\.dev|\.(st|qast) ]]; then
        # yellow prompt for semi-important hosts
        PSCOLOR="\e[0;33m"
    elif [[ $HOSTNAME =~ chunter-desktop ]]; then
        # teal prompt for my workstation
        PSCOLOR="\e[0;36m"
    else
        # green prompt for lower environments
        PSCOLOR="\e[0;32m"
    fi
else
    PSCOLOR=''
fi

# add decorators to hosstring
PSHEAD="${PSCOLOR}\u@${HOSTSTRING/${DOTDOMAINNAME}/}\e[0;37m:\w"
# Prompt info that should come after the git information
PSTAIL="\n[\t] \$ "

# add git prompt settings if available
if [ -f ~/.bash-git-prompt/gitprompt.sh ]; then
    source ~/.bash-git-prompt/gitprompt.sh
    GIT_PROMPT_START=$PSHEAD
    GIT_PROMPT_END=$PSTAIL
    GIT_PROMPT_ONLY_IN_REPO=1
else
    PS1=${PSHEAD}${PSTAIL}
fi

unset color_prompt force_color_prompt
