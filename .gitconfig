[user]
    name = Chris Hunter
    email = christopher.hunter@bigfishgames.com
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[color "status"]
    added = green
    changed = red bold
    untracked = magenta bold
[color "branch"]
    remote = yellow
[credential]
    helper = cache --timeout=86400
[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
[core]
    whitespace = tab-in-indent,cr-at-eol,trailing-space,tabwidth=4
    pager = less -x1,5
