[user]
    name = Christopher Hunter
    email = christopher.hunter@bigfishgames.com
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[color "status"]
    added = green
    changed = red bold
    untracked = magenta bold
[color "branch"]
    remote = yellow
    default = matching
[credential]
    helper = cache --timeout=86400
[alias]
    ad = add -A
    br = branch
    bra = branch -a
    ci = commit
    co = checkout
    diffs = diff --staged
    lol = log --oneline --graph --decorate --all
    re = remote -v
    re = remote -v
    st = status
[core]
    editor = vim
    ignorecase = false
    whitespace = tab-in-indent,cr-at-eol,trailing-space,tabwidth=4
    pager = less -x1,5
    autocrlf = input
[push]
    default = current
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
