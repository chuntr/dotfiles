[user]
    name = Chris Hunter
    email = christopher.hunter@bigfishgames.com
    signingkey = 5814FC60
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[color "status"]
    added = green
    changed = red bold
    untracked = magenta bold
[color "branch"]
    remote = yellow
[credential]
    helper = cache --timeout=86400
[diff]
    algorithm = patience
    compactionHeuristic = true
[alias]
    ad = add -A
    br = branch
    bra = branch -a
    ci = commit
    co = checkout
    diffs = diff --staged
    lol = log --oneline --graph --decorate --all
    last = log --pretty=format:%h%n -1
    long = log --pretty=format:%H%n -1
    re = remote -v
    st = status
[core]
    editor = vim
    ignorecase = false
    whitespace = tab-in-indent,cr-at-eol,trailing-space,tabwidth=4
    pager = cat
    autocrlf = input
[push]
    default = matching
[http]
    sslverify = false
