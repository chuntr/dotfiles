[user]
    name = Christopher Hunter
    email = christopher.hunter@bigfishgames.com
    signingkey = 5814FC60
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[color "status"]
    added = green
    changed = red bold
    untracked = magenta bold
[color "branch"]
    remote = yellow
[credential]
    helper = cache --timeout=86400
[diff]
    algorithm = patience
    compactionHeuristic = true
[alias]
    ad = add -A
    br = branch
    bre = branch -avv
    ci = commit
    co = checkout
    diffs = diff --staged
    lol = log --oneline --graph --decorate --all
    slast = log --pretty=format:%h%n -1
    llast = log --pretty=format:%H%n -1
    re = remote -v
    st = status
	lsum = log --pretty=tformat:'%C(green)%h%Creset %ai %C(yellow)%<(20)%an%Creset %s'
[core]
    editor = vim
    ignorecase = false
    whitespace = tab-in-indent,cr-at-eol,trailing-space,tabwidth=4
    pager = cat
    autocrlf = input
[push]
    default = current
[http]
    sslverify = false
[branch]
    autosetupmerge = always
[color "diff"]
    old = red
[filter "lfs"]
    required = true
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
