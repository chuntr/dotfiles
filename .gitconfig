[user]
	name = Christopher Hunter
	email = christopher.hunter@bigfishgames.com
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[color "status"]
    added = green
    changed = red bold
    untracked = magenta bold
[color "branch"]
    remote = yellow
[core]
	editor = vim
	ignorecase = false
[push]
	default = simple
[credential]
    helper = cache --timeout=86400
[alias]
    ad = add -A
    co = checkout
    ci = commit
    st = status
    br = branch
    bra = branch -a
    lol = log --oneline --graph --decorate --all
    re = remote -v
    diffs = diff --staged
[core]
    whitespace = tab-in-indent,cr-at-eol,trailing-space,tabwidth=4
    pager = less -x1,5
[push]
    default = matching
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
